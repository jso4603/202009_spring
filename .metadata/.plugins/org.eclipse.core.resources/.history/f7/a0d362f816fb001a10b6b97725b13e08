package com.myboard.dao;

import javax.annotation.Resource;

import org.apache.ibatis.session.SqlSession;
import org.springframework.stereotype.Repository;

import com.myboard.dto.MemberDTO;

@Repository
public class MemberDAOImpl implements MemberDAO {
	
	@Resource
	private SqlSession session;

	@Override
	public int insert(MemberDTO mdto) throws Exception {
		int cnt = session.insert("memberMapper.insert",mdto);
		return cnt;
	}
	
	@Override
	public void update(MemberDTO mdto) throws Exception {
		session.update("memberMapper.update",mdto);
	}

	@Override
	public void delete(String userid) throws Exception {
		session.delete("memberMapper.delete",userid);
	}

}
